{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@novaui/tsconfig/web-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "@novaui/variants": ["../ui-variants/src"],
      "@novaui/variants/*": ["../ui-variants/src/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
