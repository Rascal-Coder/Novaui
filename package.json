{
  "name": "novaui",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "license": "MIT",
  "keywords": ["UI", "UnoCSS", "shadcn-ui", "react", "vite"],
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.12.0"
  },
  "scripts": {
    "build": "turbo-run build",
    "build:unocss-preset": "pnpm -r --filter=\"./packages/unocss-preset\" run build",
    "check:type": "turbo run typecheck",
    "clean": "node scripts/clean.mjs",
    "commit": "nova git-commit",
    "commit:zh": "nova git-commit -l=zh-cn",
    "dev": "turbo-run dev",
    "lint": "eslint . --fix",
    "postinstall": "pnpm -r run stub --if-present && pnpm run build:unocss-preset",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "preview": "turbo-run preview",
    "release": "nova release",
    "update-pkg": "nova update-pkg"
  },
  "devDependencies": {
    "@novaui/cli": "workspace:*",
    "@novaui/eslint-config": "workspace:*",
    "@novaui/tsconfig": "workspace:*",
    "@novaui/turbo-run": "workspace:*",
    "@novaui/unocss-preset": "workspace:*",
    "@types/node": "22.13.5",
    "boxen": "8.0.1",
    "cac": "6.7.14",
    "execa": "9.5.2",
    "lint-staged": "15.4.3",
    "simple-git-hooks": "2.11.1",
    "turbo": "^2.5.4",
    "typescript": "5.7.3",
    "unbuild": "^3.5.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "neverBuiltDependencies": ["canvas", "node-gyp"]
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm nova git-commit-verify",
    "pre-commit": "pnpm check:type && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
